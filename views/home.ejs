<body>
    <header>
        <!-- Menu -->
        <!-- Button trigger modal -->
        <button type="button" class="btn btn1" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Menu
        </button>

        <!-- Modal -->
